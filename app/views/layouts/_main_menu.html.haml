%nav.main-menu
  .main-menu__bar.navbar.navbar-default
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{ 'type': 'button', 'data-toggle': 'collapse', 'data-target': '#js-main-menu-collapse' }
          %span.sr-only= t('.toggle_button')
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        - unless site.separate_header
          = link_to site.name, page_path('home'), class: 'main_menu__site-name navbar-brand'

      .collapse.navbar-collapse#js-main-menu-collapse
        - nav_class = 'navbar-right' unless site.separate_header
        %ul.main-menu__links.nav.navbar-nav{ class: nav_class }
          - site.main_menu_pages.each do |page|
            %li.main-menu__link-item
              = link_to page_path(page.to_param), class: 'main-menu__link cms-page-link-' + page.to_param do
                %span.main-menu__link-text= page.name
