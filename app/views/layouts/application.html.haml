!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv': 'X-UA-Compatible', content: 'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title= page_title(@site, content_for(:title))
    = stylesheet_link_tag 'application', 'data-turbolinks-track': true, media: 'all'
    = stylesheet_link_tag @site.stylesheet.url, 'data-turbolinks-track': true, media: 'all' if @site.stylesheet.url
    = javascript_include_tag 'application', 'data-turbolinks-track': true
    = content_for(:head)
    = render 'layouts/google_analytics'
    = csrf_meta_tag
    <!--[if lte IE 8]>
    = javascript_include_tag 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'
    %script{src: '/js/respond-1.4.2.min.js'}
    <![endif]-->

  %body{id: body_id(request.path)}
    = render 'layouts/topbar'

    #page_wrapper
      #page.container
        #page_header.hidden-print.row
          = render 'layouts/header'

        - if @site.main_menu_in_page and !@site.main_menu_pages.blank?
          #main_menu.hidden-print.row
            = render 'layouts/main_menu'

        #main.row
          = render "layouts/pages/#{@site.layout}"

        - if @site.main_menu_in_footer and !@site.main_menu_pages.blank?
          #footer_main_menu.hidden-print.row
            = render 'layouts/main_menu'

        #page_footer.hidden-print.row
          = render 'layouts/footer'
