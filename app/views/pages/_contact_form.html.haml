= simple_form_for (@message || Message.new), url: contact_form_page_path do |form|
  = form.input :name
  = form.input :email_address
  = form.input :phone_number
  = form.input :message, as: :text, wrapper: :wide, input_html: {rows: 4, class: 'autogrow'}

  .hidden
    = form.input :do_not_fill_in

  .form-group
    .col-sm-offset-3.col-md-offset-2.col-sm-9.col-md-10
      = form.button :submit, t('actions.send_message')
