:ruby
  content_for :title, t('.title')
  content_for :page_icon, t('.icon')

.thumbnail-grid
  - @images.each do |image|
    = link_to(image.file.public_url, target: '_blank', class: 'thumbnail-grid__link') do
      = image_tag(image.file.span3.public_url, alt: image.name, class: 'thumbnail-grid__image')
      .thumbnail-grid__body
        %h5.thumbnail-grid__name= image.name
