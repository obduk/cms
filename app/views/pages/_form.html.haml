- content_for :head do
  = javascript_include_tag 'tinymce', 'data-turbolinks-track': 'reload', crossorigin: 'anonymous'

= simple_form_for page do |form|
  = form.input :url, disabled: true
  = form.input :name, autofocus: true
  = form.input :hidden
  = form.input :private

  .editor.js-editor.form-control{ id: 'page[html_content]' }
    = form.object.html_content&.html_safe

  = form.input :contact_form

  .form__buttons
    = form.button :submit
    = link_to t('actions.cancel'), page, class: 'btn'

= tinymce
