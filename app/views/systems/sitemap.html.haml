- content_for :title, t('.title')
- content_for :page_icon, t('.icon')

%ul.list-unstyled#cms-sitemap
  - @pages.each do |page|
    - if can? :read, page
      %li
        = link_to(page.name, page_path(page.to_param))
        = content_tag(:i, nil, class: "fa fa-#{t('pages.show.private.icon')}") if page.private
