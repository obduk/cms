#!/bin/bash
set -e
cd `dirname $0`/..

export RAILS_ENV='test'

if [ $# -gt 0 ]; then
  export RACK_TIMEOUT_SERVICE_TIMEOUT=0

  set -v

  eval "./bin/rspec $@"
else
  export COVERAGE=on
  export DISABLE_SPRING=true
  export RACK_TIMEOUT_SERVICE_TIMEOUT=1

  if [ "$CIRCLECI" = "true" ]; then
    set -v

    JOBS=4

    eval "./bin/rake parallel:create[$JOBS]"
    eval "./bin/rake parallel:load_schema[$JOBS]"
    eval "./bin/rake parallel:spec[$JOBS]"
  else
    set -v

    eval "./bin/rspec"
  fi
fi

# 'test complete'
