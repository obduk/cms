- content_for :title, t('.title')
- content_for :page_icon, t('.icon')

= simple_form_for @site do |form|
  = form.input :host, disabled: true
  = form.input :name, autofocus: true
  = form.input :sub_title
  = form.input :copyright
  = form.input :google_analytics
  = form.input :charity_number, disabled: true
  = form.input :layout, collection: Site::LAYOUTS.map{|i| [i.humanize, i]}, prompt: nil

  .form-group
    .col-sm-offset-3.col-md-offset-2.col-sm-9.col-md-10
      = form.button :submit
      = link_to t('actions.cancel'), page_path('home'), class: 'btn'
