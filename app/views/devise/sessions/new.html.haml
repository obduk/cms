- content_for :title, t('.title')

= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |form|
  = form.input :email, autofocus: true
  = form.input :password, input_html: { autocomplete: 'off' }
  = form.input :remember_me, as: :boolean

  .form-group
    .col-control-offset
      = form.button :submit, value: t('.title')

= link_to t('devise.passwords.new.title'), new_password_path(resource_name)

- if Rails.application.secrets.google_client_id
  %h2= t('.accounts')

  = link_to user_google_omniauth_authorize_path do
    = image_tag 'login_google.png', alt: t('.google')
