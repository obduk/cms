#!/bin/bash
set -ev

cd `dirname $0`/..

./bin/bundle install --quiet
./bin/spring stop
RAILS_ENV=test ./bin/rake db:create db:migrate VERBOSE=false
RAILS_ENV=development ./bin/rake db:create db:migrate VERBOSE=false
RAILS_ENV=development ./bin/annotate --show-foreign-keys --show-indexes

# "bootstrap complete"
