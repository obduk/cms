<% content_for :title, t('.title') %>
<% content_for :page_icon, t('.icon') %>
<% content_for :form_page, true %>

<%= simple_form_for resource, as: resource, url: user_registration_path do |form| %>
  <%= form.input :current_password, autofocus: true, hint: t('.current_password_hint'), required: true, input_html: { autocomplete: 'off' } %>

  <%= form.input :password, hint: t('.password_hint'), input_html: { autocomplete: 'off' } %>

  <%= form.input :password_confirmation, input_html: { autocomplete: 'off' } %>

  <%= form.input :name %>

  <%= form.input :email, required: true %>

  <div class="form-group">
    <%= link_to(image_tag(current_user.gravatar_url(size: 150), alt: User.human_attribute_name(:profile_image), class: 'image--circle', size: '150x150'), 'https://www.gravatar.com') %>
  </div>

  <div class="form__buttons">
    <%= form.button :submit %>
    <%= link_to t('actions.cancel'), page_path('home'), class: 'button--cancel' %>
  </div>
<% end %>
