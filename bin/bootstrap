#!/bin/bash
set -e

cd `dirname $0`/..

bin/bundle

files="
config/application.yml
config/deploy/production.application.yml
config/deploy/production.rb
config/deploy/staging.application.yml
config/deploy/staging.rb
"

for file in $files
do
  if [ ! -f $file ]
  then
    cp ${file}.example $file
  fi
done

if grep -q '^SECRET_KEY:$' config/application.yml
then
  secret=`bin/rake secret`
  sed -i "s/^SECRET_KEY:$/SECRET_KEY: '$secret'/" config/application.yml
fi

