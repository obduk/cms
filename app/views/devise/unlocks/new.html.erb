<% content_for :title, t('.title') %>
<% content_for :form_page, true %>

<%= simple_form_for resource, as: resource_name, url: unlock_path(resource_name) do |form| %>
  <%= form.input :email, required: true, autofocus: true %>

  <div class="form__buttons">
    <%= form.button :submit, t('.submit') %>
  </div>
<% end %>
