- content_for :title, t('.title')

= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |form|
  = form.error_notification

  = form.input :reset_password_token, as: :hidden
  = form.full_error :reset_password_token

  = form.input :password, label: 'New password', required: true, autofocus: true
  = form.input :password_confirmation, label: 'Confirm new password', required: true

  .form-group
    .col-control-offset
      = form.button :submit, t('.title')
